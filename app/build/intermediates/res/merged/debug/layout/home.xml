<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YappingColor">

    <FrameLayout
        android:id="@+id/maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <View android:id="@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/etQuestion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="top|left"
                android:hint="What&apos;s your query today? Tap here."
                android:textSize="20dp"
                android:onClick="animateText"
                android:background="@drawable/rounded"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/YappingColor">
            </EditText>

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/bAsk"
                android:dividerHeight="5dp"
                android:divider="@color/White"
                android:background="@drawable/rounded"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true">
            </ListView>

            <Button
                android:id="@+id/bsetpreferencesbeforeask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/strut"

                android:layout_below="@id/etQuestion"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded"
                android:text="Set Category"
                android:textColor="@color/YappingColor"
                android:visibility="gone"
                android:onClick="displayCategory"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/bAsk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/etQuestion"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@id/strut"
                android:background="@drawable/rounded"
                android:text="Ask!"
                android:textColor="@color/YappingColor"
                android:visibility="gone"
                android:layout_marginRight="5dp" />

            <Button
                android:id="@+id/bCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/etQuestion"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignRight="@id/strut"
                android:background="@drawable/rounded"
                android:text="Cancel"
                android:textColor="@color/YappingColor"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:onClick="hideText" />


        </RelativeLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/drawerlist"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/White"
        android:divider="@null" >
    </ListView>

</android.support.v4.widget.DrawerLayout><!-- From: file:/home/srikar/Yapping-master-revised/YappingAndroid/app/src/main/res/layout/home.xml -->