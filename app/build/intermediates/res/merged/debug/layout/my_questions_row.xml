<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/YappingColor">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:background="@color/YappingColor"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:id="@+id/my_questions_row_textview"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Answers"
        android:background="@drawable/rounded"
        android:padding="3dp"
        android:textColor="@color/YappingColor"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/my_questions_row_textview"
        android:id="@+id/bview_answers_myqestions_row"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Delete Question"
        android:background="@drawable/rounded"
        android:textColor="@color/YappingColor"
        android:layout_toRightOf="@id/bview_answers_myqestions_row"
        android:layout_marginLeft="10dp"
        android:id="@+id/bdel_answers_row_textview"
        android:layout_below="@id/my_questions_row_textview"/>
</RelativeLayout><!-- From: file:/home/srikar/Yapping-master-revised/YappingAndroid/app/src/main/res/layout/my_questions_row.xml -->